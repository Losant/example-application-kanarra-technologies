.device-groups .device-group {
  background-color: white;
  margin-bottom: 16px;
  border-radius: 6px;
  padding: 16px;
  border: 1px solid #ACBBB5;
}

.device-groups .device-group-healthy {
  border-left: 3px solid green;
}

.device-groups .device-group-unhealthy {
  border-left: 3px solid #B70000;
}

.device-groups .device-group-name {
  font-size: 15px;
  margin-top: 7px;
  margin-bottom: 7px;
  margin-left: 10px;
}

.device-groups .status-color-faulted {
  background-color: #B70000;
}

.device-groups .status-color-running {
  background-color:#5CB700;
}

.device-groups .status-color-maintenance {
  background-color: #B70000;
}

.device-groups .status-color-stopped {
  background-color: #A7A7A7;
}

.device-groups [data-faulted-mode="1"] {
  background-color: #B70000;
}

.device-groups [data-maintenance-mode="1"] {
  background-color: #B70000;
}

.device-groups [data-low-fuel="1"] {
  background-color: #B70000;
}

.device-groups [data-faulted-mode="0"][data-maintenance-mode="0"][data-low-fuel="0"] {
  background-color:#5CB700;
}

.component-device-block {
  width: 255px;
  height: 390px;
  margin: 10px;
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.10);
}

.component-device-block .header-model {
  font-size: 9px;
  padding-bottom: 4px;
}

.component-device-block .header {
  position:relative;
  height:39px;
  background-color:#AEA892;
  color:white;
  font-size:16px;
  box-sizing:border-box;
  padding-top:6px;
  padding-left:8px;
}

.component-device-block .header-details {
  position:absolute;
  top:12px;
  right:2px;
}

.component-device-block .header-details a {
  padding:8px;
}

.component-device-block .header-details img {
  width:9px;
}

.component-device-block .main-health-indicator {
  height:3px;
}

.component-device-block .status-row {
  height:12px; 
  box-sizing:border-box; 
  padding:7px 10px 7px 10px; 
  width:100%; 
  display:flex; 
  font-size: 9px; 
  justify-content:space-between;
}

.component-device-block .status-description {
  display:flex;
}

.component-device-block .status-indicator {
  height:7px; 
  width: 7px; 
  border-radius: 3.5px; 
  margin-right:4px;
}

.component-device-block .image-container {
  width:100%; 
  box-sizing:border-box;
  padding:7px 14px 7px 14px;
  height:122px;
}

.component-device-block .device-image {
  width:100%; 
  height:100%; 
  object-fit:contain;
}

.component-device-block .location-label {
  width:100%;
  box-sizing:border-box; 
  padding:0px 14px 7px 14px;
  font-size:9px;
}

.component-device-block .location-map {
  width:100%; 
  box-sizing:border-box;
  padding:0px 14px 0px 14px;
  height:126px;
  margin-bottom:14px;
}

.component-device-block .map-container {
  border:1px solid #DEDCD3; 
  width:100%; 
  height:100%
}

.component-device-block .health-indicator {
  width:100%; 
  display:flex; 
  box-sizing:border-box;
  padding:0px 14px 4px 14px; 
  font-size:10px;
  line-height:12px;  
}

.component-device-block .health-indicator-color-block {
  width:3px; 
  height:12px; 
  margin-right:4px;
}