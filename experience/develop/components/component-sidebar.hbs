<div class="sidebar-container">
  <div style="display:flex; flex-direction:column; height:100%;">
    <div class="sidebar-logo-small">
      <img src="https://{{@root.globals.filesRoot}}/{{@root.application.id}}/kanarra-logo-small.png">
    </div>
    <div style="display:flex; flex-direction:column; flex-basis:100%; min-height:0;">
      <div>
        <p class="sidebar-header">
          Device Groups
        </p>
      </div>
      <div style="flex-grow:1; min-height:0; height:100%; position:relative;">
        <form style="height:100%; min-height:0;" method="POST" action="/">
          <div style="height: 100%; display:flex; flex-direction:column;">
            <div style="flex-grow:1; min-height:0;height:100%;">
              {{component "component-group-checklist"}}
            </div>
            <div>
              <button type="submit" class="button sidebar-button">Apply Groups</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>